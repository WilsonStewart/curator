{
  "name": "curator-server",
  "version": "0.1.0",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:genMigrations": "bun run drizzle-kit generate",
    "db:reinit": "rm -rf ./src/drizzle; bun run ./src/dev-tools/db-schemas-reinit.ts; bun run drizzle-kit generate;bunx drizzle-kit generate --custom --name=seed-builtin; cp -f ./src/schemas/0001_seed-builtin.sql ./src/drizzle/0001_seed-builtin.sql",
    "db:genBetterAuthMigrations": "bunx @better-auth/cli generate",
    "db:migrate": "bun run drizzle-kit migrate",
    "devtools:genNanoids": "bun run dev-tools/gen-20-nanoids.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@scalar/hono-api-reference": "^0.9.1",
    "better-auth": "^1.2.9",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.1",
    "drizzle-zod": "^0.7.1",
    "hono": "^4.7.10",
    "hono-openapi": "^0.4.8",
    "ioredis": "^5.6.1",
    "nanoid": "^5.1.5",
    "pg": "^8.16.0",
    "ulid": "^3.0.1",
    "zod": "^3.25.49",
    "zod-openapi": "^4.2.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.2",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.19.4"
  }
}